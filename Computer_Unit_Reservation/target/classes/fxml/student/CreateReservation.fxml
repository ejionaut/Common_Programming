<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane fx:id="bp" prefHeight="641.0" prefWidth="732.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.student.CreateReservationFormFX">
   <center>
      <VBox prefHeight="641.0" prefWidth="732.0" styleClass="plain-dark-blue" stylesheets="@../../css/style.css"
            BorderPane.alignment="CENTER">
         <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="650.0" prefWidth="833.0">
            <Pane prefHeight="40.0" prefWidth="732.0" styleClass="plain-yellow-background"
                  stylesheets="@../../css/style.css">
               <opaqueInsets>
                  <Insets/>
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="41.0"/>
               </VBox.margin>
            </Pane>
            <Label prefHeight="62.0" prefWidth="323.0" text="Reservation Form" textAlignment="CENTER"
                   textFill="WHITE">
               <font>
                  <Font name="Coco Gothic" size="39.0"/>
               </font>
            </Label>
            <VBox maxWidth="-Infinity" prefHeight="55.0" prefWidth="298.0">
               <padding>
                  <Insets top="13.0"/>
               </padding>
               <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="97.0" text="Subject:" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="12.0"/>
                  </font>
               </Label>
               <ChoiceBox fx:id="subjectTextBox" prefHeight="25.0" prefWidth="291.0"/>
            </VBox>
            <VBox maxWidth="-Infinity" prefHeight="55.0" prefWidth="298.0">
               <padding>
                  <Insets top="13.0"/>
               </padding>
               <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="97.0" text="Purpose:" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="12.0"/>
                  </font>
               </Label>
               <ChoiceBox fx:id="purposeTextBox" prefHeight="25.0" prefWidth="291.0"/>
            </VBox>
            <VBox maxWidth="-Infinity" prefHeight="55.0" prefWidth="298.0">
               <padding>
                  <Insets top="13.0"/>
               </padding>
               <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="97.0" text="Date:" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="12.0"/>
                  </font>
               </Label>
               <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="291.0"/>
            </VBox>
            <VBox maxWidth="-Infinity" prefHeight="47.0" prefWidth="296.0">
               <padding>
                  <Insets top="13.0"/>
               </padding>
               <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="97.0" text="Start Time:" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="12.0"/>
                  </font>
               </Label>
               <ChoiceBox fx:id="startTimeChoiceBox" prefHeight="25.0" prefWidth="291.0"/>
            </VBox>
            <VBox maxWidth="-Infinity" prefHeight="42.0" prefWidth="296.0">
               <padding>
                  <Insets top="13.0"/>
               </padding>
               <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="97.0" text="End Time:" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="12.0"/>
                  </font>
               </Label>
               <ChoiceBox fx:id="endTimeChoiceBox" prefHeight="25.0" prefWidth="291.0"/>
            </VBox>
            <VBox maxWidth="-Infinity" prefHeight="59.0" prefWidth="293.0">
               <padding>
                  <Insets top="13.0"/>
               </padding>
               <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="97.0" text="Unit Number:"
                      textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="12.0"/>
                  </font>
               </Label>
               <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                  <TextField fx:id="unitNumberBox" prefHeight="25.0" prefWidth="210.0"/>
                  <Button fx:id="selectAvailUnitButton" mnemonicParsing="false" prefHeight="25.0"
                          prefWidth="81.0" styleClass="plain-yellow-background"
                          stylesheets="@../../css/style.css" text="Select"/>
               </HBox>
            </VBox>
            <Label fx:id="unitPrompt" alignment="CENTER" prefHeight="17.0" prefWidth="234.0" text=" "
                   textFill="#009431">
               <font>
                  <Font size="15.0"/>
               </font>
            </Label>
            <Label fx:id="errorPrompt" alignment="CENTER" prefHeight="17.0" prefWidth="234.0" text=" "
                   textFill="#009431">
               <font>
                  <Font size="15.0"/>
               </font>
            </Label>
            <Button fx:id="submitButton" mnemonicParsing="false" prefHeight="33.0" prefWidth="291.0"
                    styleClass="plain-yellow-background" stylesheets="@../../css/style.css" text="Submit"/>
            <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#toReservationPane" prefHeight="30.0"
                    prefWidth="291.0" style="-fx-background-color: red;" styleClass="plain-yellow-background"
                    stylesheets="@../../css/style.css" text="Back">
               <VBox.margin>
                  <Insets top="6.0"/>
               </VBox.margin>
            </Button>
         </VBox>
      </VBox>
   </center>
</BorderPane>
